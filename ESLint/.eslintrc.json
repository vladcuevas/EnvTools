{
    "env":
    {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions":
    {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules":
    {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "eqeqeq":[2,"smart"],
        "no-multiple-empty-lines":["warn", {"max":2,"maxEOF":1,"maxBOF":1}],
        "camelcase":["error", {"properties":"always"}]
    },
    "globals": {
        "d3": true
    }
}